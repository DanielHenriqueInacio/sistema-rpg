<%- contentFor("content") %>

<div class="container mt-5">
    <div class="col-md-12">
        <h1 class="h2 mb-4 fw-normal">Campanhas</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <% if(campanhas.data.length === 0) { %>
                <div class="alert alert-info col-md-12 text-center">
                    <p>Você não tem nenhum Campanha, fale com seu mestre para começar</p>
                </div>
            <% } else { %>
            <table class="table table-bordered text-center">
                <thead>
                <tr>
                    <th class="table-secondary text-dark">
                        Campanha
                    </th>
                    <th class="table-secondary text-dark">
                        Mestre
                    </th>
                    <th class="table-secondary text-dark">
                        Data início
                    </th>
                    <th class="table-secondary text-dark">
                        Data Final
                    </th>
                </tr>
                </thead>
                <tbody>
                <% for(const campanha of campanhas.data) { %>
                    <tr>
                        <td><a href="#"><%= campanha.titulo %></a></td>
                        <td><%= campanha.mestre.nome %></td>
                        <td><%= campanha.data_inicio %></td>
                        <td>
                            <% if(campanha.data_fim === null) { %>
                                <p>Em andamento</p>
                            <% } else { %>
                                <%= campanha.data_fim %>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>