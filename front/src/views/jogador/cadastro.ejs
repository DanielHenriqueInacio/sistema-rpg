<%- contentFor("estilo") %>
<link rel="stylesheet" href="/static/css/signin.css">

<%- contentFor("content") %>

<form action="/cadastro" method="post" class="form-signin text-center">

    <h1 class="h3 mb-3 font-weight-normal">Cadastre-se aqui!</h1>
    <div class="form-group">
        <label for="name" class="d-flex align-items-start">Nome</label>
        <input type="text" name="nome" id="inputname" class="form-control" placeholder="Insira seu Nome" autofocus>
    </div>
    <div class="form-group">
        <label for="email" class="d-flex align-items-start">E-mail</label>
        <input type="text" name="email" id="inputemail" class="form-control" placeholder="Insira seu E-mail">
    </div>
    <div class="form-group">
        <label for="inputPassword" class="d-flex align-items-start">Senha</label>
        <input type="password" name="senha" id="inputPassword" class="form-control" placeholder="insira uma senha">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Salvar</button>
    <p>Já é cadastrado? <a href="/login">Clique aqui!</a></p>

    <p class="mt-5 mb-3 text-muted">&copy; 2017-2022</p>
</form>
