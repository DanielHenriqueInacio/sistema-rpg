<%- contentFor("estilo") %>

<%- contentFor("content") %>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="row mt-5">
                <div class="col-md-12">
                    <h1 class="h2 mb-3 fw-normal text-center">Armas</h1>
                </div>
                <div class="col-md-12">
                    <form action="">
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>Selecione</th>
                                    <th>Nome</th>
                                    <th>Imagem</th>
                                    <th>Descrição</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% for(const arma of armas.data) { %>
                                <tr>
                                    <td value="" class="col-md-2">
                                        <div class="form-check form-check-inline px-5">
                                            <input class="form-check-input" type="radio" name="exampleRadios"
                                                   id="exampleRadios2" value="option2">

                                        </div>
                                    </td>
                                    <td value="<%= arma.id %>" class="col-md-3"><%= arma.nome %></td>
                                    <td value="<%= arma.id %>" class="col-md-3">
                                        <% if(arma.foto == null) {%>
                                            <img src="/static/imagens/SemFoto.png" width="100" alt="">
                                        <%} else {%>
                                            <img src="<%= `${apiUrl}${arma.foto.formats.thumbnail.url}`%>" alt="">
                                        <%}%>
                                    </td>
                                    <td value="<%= arma.id %>" class="col-md-4"><%= arma.descricao %></td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>